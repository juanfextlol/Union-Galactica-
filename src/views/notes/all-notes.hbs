<h1>Tus TorneosüèÜ</h1>
<div class="row">
    {{#each notes }}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>

                    </h4>
                    <p>{{description}}</p>
                   <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                   <input type="hidden" value="DELETE" name="_method">
                    <button class="btn btn-danger btn-block btn-sm" type="submit">
                        Delete
                    </button>
                   </form>
            </div>
        </div>
    </div>
{{else}}
<div class="card mx-auto">
    <div class="card-body">
        <h1>Hola! , {{user.name}}</h1>
        <p class="lead">No has creado ningun Torneo Aun.</p>
        <a href="/notes/add"class="btn btn-success btn-block">Crear un Torneo!</a>
    </div>
</div>
    {{/each}}
</div>